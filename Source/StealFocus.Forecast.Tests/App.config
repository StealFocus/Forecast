<?xml version="1.0"?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="stealFocusForecastConfiguration" type="StealFocus.Forecast.Configuration.StealFocusForecastConfiguration, StealFocus.Forecast"/>
  </configSections>

  <log4net configSource="log4net.config" />

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>

  <stealFocusForecastConfiguration xmlns="urn:StealFocus.Forecast.Configuration">
    <windowsAzureSubscriptions>
      <!--
        Specify your subscription information here. The certificate matching 
        the thumprint must be stored in the current user's "Personal" certificate
        store.
      -->
      <windowsAzureSubscription
        id="myArbitrarySubscriptionName"
        subscriptionId="13408C03-E96F-4768-B3F8-BFE0CAB7EBC9"
        certificateThumbprint="0000000000000000000000000000000000000000" />
    </windowsAzureSubscriptions>
    <windowsAzureDeploymentDeletes>
      <!-- 
        Delete any Production or Staging deployment of the specified service 
        name between 00:00hrs and  08:00hrs, checking every 10mins within that 
        period, using the named subscription.
      -->
      <windowsAzureDeploymentDelete
        id="myArbitraryDeploymentDeleteName1"
        serviceName="myServiceName"
        dailyStartTime="00:00:00"
        dailyEndTime="08:00:00"
        pollingIntervalInMinutes="10"
        subscriptionConfigurationId="myArbitrarySubscriptionName">
        <deploymentSlots>
          <deploymentSlot name="Staging" />
          <deploymentSlot name="Production" />
        </deploymentSlots>
      </windowsAzureDeploymentDelete>
      <!-- 
        Delete any Production or Staging deployment of the specified service 
        name between 18:00hrs and 23:59hrs, checking every 10mins within that 
        period, using the named subscription.
      -->
      <windowsAzureDeploymentDelete
        id="myArbitraryDeploymentDeleteName2"
        serviceName="myServiceName"
        dailyStartTime="18:00:00"
        dailyEndTime="23:59:59"
        pollingIntervalInMinutes="10"
        subscriptionConfigurationId="myArbitrarySubscriptionName">
        <deploymentSlots>
          <deploymentSlot name="Staging" />
          <deploymentSlot name="Production" />
        </deploymentSlots>
      </windowsAzureDeploymentDelete>
    </windowsAzureDeploymentDeletes>
  </stealFocusForecastConfiguration>

